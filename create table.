#creation of a table
create table students (
st_id int primary key autoincrement,
st_name varchar(255),
age int,
gender varchar(255)
)

#insert details of students
insert into info(st_id,st_name,age,gender)values(1,'Krishna',20,'male');
insert into info(st_id,st_name,age,gender)values(2,'Sailaja',21,'female');
insert into info(st_id,st_name,age,gender)values(3,'Ravi',20,'male');

#retrieving all data from table
select * from students

#updating the name of a student
update students
set st_name='Janet'
where st_id=2

#deletion of a student data
delete from students
where st_id=3

#retrieving the data again from the table
select * from students


